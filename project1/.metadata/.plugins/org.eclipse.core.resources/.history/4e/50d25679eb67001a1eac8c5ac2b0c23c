package booksystem.biz;
/**
 * 业务工厂类
 * @todo TODO
 * @author Jaden
 * @date 2020年3月17日,上午9:02:17
 * @copyright Jaden
 */
public class BizFactory {
	/**
	 * 根据业务类的名称，获得相应的业务类实现
	 * @param bizName
	 * @return
	 */
	public static Biz getBiz(String bizName) {
		//为了统一小写
		switch (bizName.toLowerCase()) {
		case "bookinfobiz":
			return BookInfoBizImp1();
			break;
		default:
			break;
		}
	}
}
